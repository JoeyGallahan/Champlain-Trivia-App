<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/champDark</item>
        <item name="colorPrimaryDark">@color/champAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChangeActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/champShadow</item>
    </style>

    <style name="horiz_divider_small">
        <item name = "android:layout_width">100dp</item>
        <item name = "android:layout_height">0.5dp</item>
        <item name = "android:background">@color/white</item>
    </style>
    <style name="horiz_divider_full">
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">0.5dp</item>
        <item name = "android:background">@android:color/black</item>
    </style>
</resources>
